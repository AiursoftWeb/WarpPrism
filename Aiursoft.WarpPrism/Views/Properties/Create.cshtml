@model Aiursoft.WarpPrism.Models.Property
@{
    ViewData["Title"] = "Create";
}
<h2>新建列</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TableId" class="form-control" />
            <div class="form-group">
                <label class="control-label">列名</label>
                <input asp-for="PropertyName" class="form-control" />
                <span asp-validation-for="PropertyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">列类型</label>
                <select asp-for="Type" class="form-control">
                    <option value="1">number</option>
                    <option value="2">text</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-route-id="@Model.TableId">返回表定义</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
