@model Aiursoft.WarpPrism.Models.ItemsViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>插入新数据</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TableId" value="@Model.TableId" />
            @foreach (var property in Model.Properties)
            {
                <div class="form-group">
                    <label class="control-label">@property.PropertyName</label>
                    <input name="@property.PropertyId" class="form-control" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="插入" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.TableId">返回所有数据</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
