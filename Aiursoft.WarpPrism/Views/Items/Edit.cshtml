@model Aiursoft.WarpPrism.Models.ItemsViewModels.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TargetItemId" value="@Model.TargetItemId" />
            <input type="hidden" asp-for="TableId" value="@Model.TableId" />
            @foreach (var property in Model.Properties)
            {
                <div class="form-group">
                    <label class="control-label">@property.PropertyName</label>
                    <input name="@property.PropertyId" class="form-control" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.TableId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
