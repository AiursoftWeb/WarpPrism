@model Aiursoft.WarpPrism.Models.Table

@{
    ViewData["Title"] = "Delete";
}

<h2>删除表</h2>

<h3>你确定要删除这个表吗</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            表名
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TableName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TableId" />
        <input type="submit" value="删除" class="btn btn-default" /> |
        <a asp-action="Index" asp-route-id="@Model.DatabaseId">返回所有表</a>
    </form>
</div>
